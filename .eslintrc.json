{
  "env": {
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:compat/recommended",
    "prettier"
  ],
  "ignorePatterns": ["*.js"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["header", "@typescript-eslint"],
  "rules": {
    "header/header": [
      "error",
      "line",
      [" @webtoon/psd", " Copyright 2021-present NAVER WEBTOON", " MIT License"]
    ],
    "import/order": "error"
  }
}
